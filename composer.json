{
  "name": "knowler/wp-capsule",
  "description": "Laravel Illuminate Capsule configured for WordPress.",
  "license": "MIT",
  "authors": [
    {
      "name": "Nathan Knowler",
      "email": "nathan@knowler.me",
      "homepage": "https://knowlerkno.ws"
    }
  ],
  "keywords": [
    "capsule",
    "wordpress",
    "laravel",
    "illuminate",
    "database"
  ],
  "autoload": {
    "psr-4": {
      "KnowlerKnows\\WP\\Capsule\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KnowlerKnows\\WP\\CapsuleTests\\": "tests"
    }
  },
  "require": {
    "php": "^7.1",
    "illuminate/database": "^5.7",
    "illuminate/events": "^5.7",
    "illuminate/support": "^5.7"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3",
    "phpunit/phpunit": "^7"
  },
  "scripts": {
    "lint": "phpcs",
    "test": "echo 'The road to hell is paved with good intentions.'"
  }
}
